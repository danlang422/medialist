<%# view-media.ejs %>
<!DOCTYPE html>
<html lang="en">
    <%- include('partials/header.ejs'); %>

    <main>
        <div class="book-details">
            <img src=" <%= book.cover_url %>" alt="<%= book.book_title %>" class="book-cover">
            <div class ="book-content">
                <h1><%= book.book_title %></h1>
                <h2>by <%= book.book_author %></h2>
                <p class="review-date">Reviewed on <%= new Date(book.created_at).toLocaleDateString() %></p>
                <p><%= book.review %></p>
            </div>
        </div>
        <div class="action-buttons">
            <a href="/books/edit/<%= book.id %>" class="btn-edit">Edit</a>
            <form action="/books/delete/<%= book.id %>" method="POST" style="display: inline;">
                <button type="submit" class="btn-delete" onclick="return confirm('Are you sure you want to delete this review?')">Delete</button>
            </form>
        </div>
    </main>

    <%- include('partials/footer.ejs'); %>
</html>