<%# header.ejs %>
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/styles.css">
    <title>Media Journal</title>
</head>
<body>
    <header>
        <h1>Media Journal</h1>
    
        <nav>
            <ul class="media-filters">
                <li><a href="/?filter=all"><button class="filter-btn <%= currentFilter === 'all' ? 'active' : '' %>">
                    All
                    <img src="/assets/infinity.svg" alt="infinity icon" class="btn-icon">
                </button></a></li>
                
                <li><a href="/?filter=book"><button class="filter-btn <%= currentFilter === 'book' ? 'active' : '' %>">
                    Books
                    <img src="/assets/book-icon-thick.svg" alt="book icon" class="btn-icon">
                </button></a></li>
                
                <li><a href="/?filter=movie"><button class="filter-btn <%= currentFilter === 'movie' ? 'active' : '' %>">
                    Movies
                    <img src="/assets/filmreel-icon-thick.svg" alt="film reel icon" class="btn-icon">
                </button></a></li>
                
                <li><a href="/?filter=tv"><button class="filter-btn <%= currentFilter === 'tv' ? 'active' : '' %>">
                    TV Shows
                    <img src="/assets/tv-icon-thick.svg" alt="tv icon" class="btn-icon">
                </button></a></li>
                
                <li><a href="/?filter=game"><button class="filter-btn <%= currentFilter === 'game' ? 'active' : '' %>">
                    Games
                    <img src="/assets/controller-icon-thick.svg" alt="controller icon" class="btn-icon">
                </button></a></li>
                
                <li><a href="/?filter=music"><button class="filter-btn <%= currentFilter === 'music' ? 'active' : '' %>">
                    Music
                    <img src="/assets/music-icon-thick.svg" alt="music icon" class="btn-icon">
                </button></a></li>
                
                <li><a href="/media/new"><button class="filter-btn new-entry-btn">
                    New
                    <img src="/assets/new.svg" alt="new icon" class="btn-icon">
                </button></a></li>
            </ul>
            
            <!-- Auth status section -->
            <div class="auth-status">
                <% if (typeof user !== 'undefined' && user) { %>
                    <span>Logged in as <%= user.email %></span>
                    <a href="/logout">Logout</a>
                <% } else { %>
                    <a href="/login">Login</a> | <a href="/register">Register</a>
                <% } %>
            </div>
        </nav>
    </header>