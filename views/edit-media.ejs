<%# edit-media.ejs %>
<!DOCTYPE html>
<html lang="en">
    <%- include('partials/header.ejs'); %>

<main>
    <h2>Edit Review</h2>
    <% if (typeof error !== 'undefined') { %>
        <p class="error-message"><%= error %></p>
    <% } %>
    <form action="/media/edit/<%= item.id %>" method="POST">
        <div class="form-group">
            <label for="title">Title:</label>
            <input type="text" id ="title" name="title" value="<%= item.title %>" required>
        </div>
        <div class="form-group">
            <label for="creator">Creator:</label>
            <input type="text" id="creator" name="creator" value="<%= item.creator %>" required>
        </div>
        <div class="form-group">
            <label for="review">Review:</label>
            <textarea id="review" name="review" rows="10" required><%= item.review %></textarea>
        </div>
        <button type="submit" class="btn-save">Update Media</button>
    </form>
    <form action="/media/delete/<%= item.id %>" method="POST" style="display: inline;">
        <button type="submit" class="btn-delete" onclick="return confirm('Are you sure you want to delete this review?')">Delete</button>
    </form>
</main>

<%- include ('partials/footer.ejs') %>
</html>