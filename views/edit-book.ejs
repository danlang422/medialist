<!DOCTYPE html>
<html lang="en">
    <%- include('partials/header.ejs'); %>

<main>
    <h2>Edit Review</h2> 
    <% if (typeof error !== 'undefined') { %>
        <p class="error-message"><%= error %></p>
    <% } %>
    <form action="/books/edit/<%= book.id %>" method="POST">
        <div class="form-group">
            <label for="title">Title:</label>
            <input type="text" id ="title" name="title" value="<%= book.book_title %>" required>
        </div>
        <div class="form-group">
            <label for="author">Author:</label>
            <input type="text" id="author" name="author" value="<%= book.book_author %>" required>
        </div>
        <div class="form-group">
            <label for="review">Review:</label>
            <textarea id="review" name="review" rows="10" required><%= book.review %></textarea>
        </div>
        <button type="submit" class="btn-save">Update Book</button>
    </form>
</main>

<%- include ('partials/footer.ejs') %>
</html>